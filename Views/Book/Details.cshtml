@model Bookstore.Models.Book

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Details @Model.title</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class = "col-sm-2">
           Image
        </dt>
        <dd class="col-sm-10">
            @if (Model.imageUrl != null)
            {
                <img src="~/images/@Model.imageUrl" height="65" width="65" class="img-thumbnail" />

            }
            else
            {
                <img src="~/images/Default.jpg" height="65" width="65" class="img-thumbnail" />

            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.author.fullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.author.fullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-info">Edit</a>|
    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
</div>
